{
    "name": "daily-life-blog",
    "version": "1.0.0",
    "description": "A simple daily life article-writing website",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "build": "npm install && npm run build:css",
