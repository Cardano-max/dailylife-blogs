<!-- Hero section -->
<div class="relative bg-indigo-800">
    <div class="absolute inset-0">
      <img class="w-full h-full object-cover" src="https://images.unsplash.com/photo-1557804506-669a67965ba0?ixlib=rb-1.2.1&auto=format&fit=crop&w=1567&q=80" alt="Daily life">
      <div class="absolute inset-0 bg-indigo-800 mix-blend-multiply" aria-hidden="true"></div>
    </div>
    <div class="relative max-w-7xl mx-auto py-24 px-4 sm:py-32 sm:px-6 lg:px-8">
      <h1 class="text-4xl font-extrabold tracking-tight text-white sm:text-5xl lg:text-6xl">Daily Life Blog</h1>
      <p class="mt-6 text-xl text-indigo-100 max-w-3xl">
        Explore the beauty of everyday moments and find inspiration in the simple things.
      </p>
    </div>
  </div>
  
  <!-- Hot posts section -->
  <% if (hotPosts && hotPosts.length > 0) { %>
  <div class="bg-white py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h2 class="text-3xl font-extrabold tracking-tight text-gray-900 sm:text-4xl">
          Hot Posts
        </h2>
        <p class="mt-3 max-w-2xl mx-auto text-xl text-gray-500 sm:mt-4">
          Our most popular and trending content
        </p>
      </div>
      
      <div class="mt-12 overflow-hidden">
        <div class="flex space-x-6 pb-4 overflow-x-auto animate__animated animate__fadeIn">
          <% hotPosts.forEach(post => { %>
            <div class="flex-shrink-0 w-80">
              <div class="bg-white rounded-lg shadow-md overflow-hidden border-2 border-red-400">
                <a href="/blog/<%= post.id %>">
                  <div class="h-40 bg-gray-200">
                    <img 
                      src="<%= post.imageUrl || 'https://via.placeholder.com/800x450?text=Daily+Life+Blog' %>" 
                      alt="<%= post.title %>" 
                      class="w-full h-full object-cover"
                    >
                  </div>
                  <div class="p-4">
                    <div class="flex items-center mb-2">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-red-500 mr-1" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd" />
                      </svg>
                      <span class="text-xs text-gray-500"><%= new Date(post.createdAt).toLocaleDateString() %></span>
                    </div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-2 line-clamp-2"><%= post.title %></h3>
                    <p class="text-sm text-gray-600 mb-4 line-clamp-2"><%= post.content.substring(0, 100) %><%= post.content.length > 100 ? '...' : '' %></p>
                    <div class="text-right">
                      <span class="inline-flex items-center text-sm font-medium text-indigo-600 hover:text-indigo-500">
                        Read more
                        <svg class="ml-1 h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                          <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                        </svg>
                      </span>
                    </div>
                  </div>
                </a>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    </div>
  </div>
  <% } %>
  
  <!-- All posts section -->
  <div class="bg-gray-50 py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h2 class="text-3xl font-extrabold tracking-tight text-gray-900 sm:text-4xl">
          Latest Posts
        </h2>
        <p class="mt-3 max-w-2xl mx-auto text-xl text-gray-500 sm:mt-4">
          Explore our recent articles
        </p>
      </div>
      
      <div class="mt-12">
        <div class="grid gap-6 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
          <% allPosts.forEach(post => { %>
            <div class="animate__animated animate__fadeIn">
              <%- include('./partials/post-card', { post }) %>
            </div>
          <% }); %>
        </div>
        
        <div class="mt-12 text-center">
          <a href="/blog" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700">
            View All Posts
          </a>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Newsletter -->
  <div class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
          Join Our Newsletter
        </h2>
        <p class="mt-3 max-w-2xl mx-auto text-xl text-gray-500 sm:mt-4">
          Get notified when we publish new content
        </p>
      </div>
      <div class="mt-8 sm:mx-auto sm:max-w-lg sm:flex">
        <div class="min-w-0 flex-1">
          <label for="email" class="sr-only">Email address</label>
          <input id="email" type="email" class="block w-full px-4 py-3 rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" placeholder="Enter your email">
        </div>
        <div class="mt-3 sm:mt-0 sm:ml-3">
          <button type="submit" class="block w-full rounded-md border border-transparent px-4 py-3 bg-indigo-600 text-base font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:px-10">
            Subscribe
          </button>
        </div>
      </div>
    </div>
  </div>